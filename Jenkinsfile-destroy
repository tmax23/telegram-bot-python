#!/usr/bin/env groovy

pipeline {
  agent any

    stage('Provision server on AWS') {
      environment {
        AWS_ACCESS_KEY_ID = credentials('aws_access_key_id')
        AWS_SECRET_ACCESS_KEY = credentials('aws_secret_access_key')
      }

      steps {
        script {
          dir ('terraform') {
            sh "terraform init"
            EC2_STATUS = sh(
              script: "terraform apply -auto-approve",
              returnStdout: true
              ).trim()
          }
        }
      }
    }

}
